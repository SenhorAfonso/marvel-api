{
  "env": {
    "node": true,
    "es2016": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "eslint:all",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-trailing-spaces": "error",
    "no-param-reassign": "off",
    "padding-line-between-statements": "error",
    "no-multiple-empty-lines": "error",
    "space-in-parens": "warn",
    "sort-keys": "off",
    "object-curly-spacing": "error",
    "no-shadow": "off",
    "sort-imports": "off",
    "init-declarations": "off",
    "lines-between-class-members": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "max-lines-per-function": "off",
    "max-statements": [
      "error",
      20
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "off",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "files": [
        "app.ts",
        "connectDB.ts",
        "creator_service.ts"
      ],
      "rules": {
        "no-console": "off",
        "no-new": "off",
        "no-magic-numbers": "off"
      }
    },
    {
      "files": ["userRoutesHttpResponses.test.ts", "extraRoutesHttpResponses.test.ts", "ComicHttpResponses.test.ts", "CreatorHttpResponses.test.ts", "apiUtils.test.ts", "APIUtils.ts", "CharacterHttpResponses.test.ts", "ComicHttpResponses.test.ts", "CreatorHttpResponses.test.ts"],
      "rules": {
        "no-magic-numbers": "off",
        "no-underscore-dangle": "off",
        "max-lines": "off",
        "no-undefined": "off"
      }
    },
    {
      "files": [
        "characterAdapter.ts"
      ],
      "rules": {
        "class-methods-use-this": "off"
      }
    },
    {
      "files": ["errorHandlingMiddleware.ts"],
      "rules": {
        "max-params": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["userModel.ts"],
      "rules": {
        "no-invalid-this": "off"
      }
    },
    {
      "files": ["character_repository.ts", "character_service.ts"],
      "rules": {
        "no-return-await": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["validateUser.ts"],
      "rules": {
        "require-unicode-regexp": "off"
      }
    }
  ]
}